from tkinter import *
from tkinter import ttk


def add_note():
    note1 = ttk.Button(text=f +"." + entry.get, command=add_note)
    note1.pack(anchor=NW, padx=6, pady=6)


root = Tk()
root.title("Notes")
root.geometry("300x300")

label = ttk.Label()
label.pack(anchor=NW, padx=6, pady=6)
label2 = ttk.Label()
label2.pack(anchor=NW, padx=6, pady=6)
label["text"] = "Введите заметку в поле ввода"
label2["text"] = "Чтобы удалить заметку просто нажмите на неё"

entry = ttk.Entry()
entry.pack(anchor=NW, padx=6, pady=6)

btn = ttk.Button(text="Добавить заметку", command=add_note)
btn.pack(anchor=NW, padx=6, pady=6)

root.mainloop()
